{
    "$schema": "../../Thunder/Tools/JsonGenerator/schemas/interface.schema.json",
    "jsonrpc": "2.0",
    "info": {
        "title": "ControlService API", 
        "class": "ControlService", 
        "description": "The `ControlService` plugin provides the ability to manage the remote controls of a STB."
    },
    "definitions": {
        "params":{
            "summary": "An empty `params` object",
            "type": "object",
            "properties": {}
        },
        "supportsASB":{
            "summary": "Whether the remote supports ASB",
            "type": "boolean",
            "example": true
        },
        "enableASB":{
            "summary": "Whether ASB is enabled",
            "type": "boolean",
            "example": false
        },
        "enableOpenChime":{
            "summary": "Whether the open chime is enabled",
            "type": "boolean",
            "example": false
        },
        "enableCloseChime":{
            "summary": "Whether the close chime is enabled",
            "type": "boolean",
            "example": true
        },
        "enablePrivacyChime":{
            "summary": "Whether the privacy chime is enabled",
            "type": "boolean",
            "example": true
        },
        "conversationalMode":{
            "summary": "The conversational mode",
            "type": "integer",
            "example": 6
        },
        "chimeVolume":{
            "summary": "The chime volume",
            "type": "integer",
            "example": 1
        },
        "irCommandRepeats":{
            "summary": "The number of command repeats",
            "type": "integer",
            "example": 3
        },
        "status_code": {
            "summary": "An operations status code",
            "type": "integer",
            "example": "0"
        },
        "remoteId": {
            "summary": "The remote control identifier",
            "type": "integer",
            "example": 1
        },
        "remoteType": {
            "summary": "The remote control type",
            "type": "string",
            "example": "XR11"
        },
        "bindingType": {
            "summary": "The remote control binding type",
            "type": "integer",
            "example": 1
        },
        "configurationStatus": {
            "summary": "The remote control configuration status",
            "type": "integer",
            "example": 1
        },
        "validationDigit1": {
            "summary": "The first digit for pairing",
            "type": "integer",
            "example": 1
        },
        "validationDigit2": {
            "summary": "The second digit for pairing",
            "type": "integer",
            "example": 3
        },
        "validationDigit3": {
            "summary": "The third digit for pairing",
            "type": "integer",
            "example": 5
        },
        "result": {
            "type":"object",
            "properties": {
                "success": {
                    "$ref": "#/definitions/success"
                }
            },
            "required": [
                "success"
            ]
        },
        "success": {
            "summary": "Whether the request succeeded",
            "type": "boolean",
            "example": "true"
        }
    },
    "methods":{
        "canFindMyRemote":{
            "summary": "Checks if the Control Manager can search for the remote",
            "params": {
                "$ref": "#/definitions/params"
            },
            "result": {
                "type":"object",
                "properties": {
                    "result":{
                        "summary": "The operation status",
                        "type": "boolean",
                        "example": "true"
                    },
                    "success": {
                        "$ref": "#definitions/success"
                    }
                },
                "required":[
                    "result",
                    "success"
                ]
            }
        },
        "endPairingMode":{
            "summary": "Leaves pairing mode",
            "params": {
                "$ref": "#/definitions/params"
            },
            "result": {
                "type":"object",
                "properties": {
                    "bindStatus":{
                        "summary": "The binding status",
                        "type": "integer",
                        "example": 1
                    },
                    "status_code": {
                        "$ref": "#/definitions/status_code"
                    },
                    "success":{
                        "$ref": "#/definitions/success"
                    }
                },
                "required":[
                    "bindStatus",
                    "status_code",
                    "success"
                ]
            }

        },
        "findLastUsedRemote":{
            "summary": "Searches for the remote",
            "params": {
                "type":"object",
                "properties": {
                    "timeOutPeriod": {
                        "summary": "The timeout interval in milliseconds",
                        "type": "integer",
                        "example": 100
                    },
                    "bOnlyLastUsed":{
                        "summary": "Whether to use the last controller ID",
                        "type": "boolean",
                        "example": true
                    }
                },
                "required": [
                    "timeOutPeriod",
                    "bOnlyLastUsed"
                ]
                },
            "result": {
                "type":"object",
                "properties": {
                    "status_code": {
                        "$ref": "#/definitions/status_code"
                    },
                    "success":{
                        "$ref": "#/definitions/success"
                    }
                },
                "required":[
                    "status_code",
                    "success"
                ]
            }
        },
        "getAllRemoteData":{
            "summary": "Returns all remote data",
            "params": {
                "$ref": "#/definitions/params"
            },
            "result": {
                "type":"object",
                "properties": {
                    "stbRf4ceMACAddress":{
                        "summary": "The STB MAC address for the RF4CE network",
                        "type": "string",
                        "example": "0x00155F00205E1XXX"
                    },
                    "stbRf4ceSocMfr":{
                        "summary": "The STB SOC Manufacturer",
                        "type": "string",
                        "example": "GP502KXBG"
                    },
                    "stbHALVersion":{
                        "summary": "The STB HAL version",
                        "type": "string",
                        "example": "GPv2.6.3.514598"
                    },
                    "stbRf4ceShortAddress":{
                        "summary": "The STB short address for the RF4CE",
                        "type": "integer",
                        "example": 64253
                    },
                    "stbPanId":{
                        "summary": "The STB PAN Identifier",
                        "type": "integer",
                        "example": 25684
                    },
                    "stbActiveChannel":{
                        "summary": "The STB active channel",
                        "type": "integer",
                        "example": 25
                    },
                    "stbNumPairedRemotes":{
                        "summary": "The number of remotes paired to the STB",
                        "type": "integer",
                        "example": 0
                    },
                    "stbNumScreenBindFailures":{
                        "summary": "The number of screen bind failures for the STB",
                        "type": "integer",
                        "example": 1
                    },
                    "stbLastScreenBindErrorCode":{
                        "summary": "The last screen bind error code on the STB",
                        "type": "integer",
                        "example": 1
                    },
                    "stbLastScreenBindErrorRemoteType":{
                        "summary": "The remote type for the last screen bind error on the STB",
                        "type": "string",
                        "example": ""
                    },
                    "stbLastScreenBindErrorTimestamp":{
                        "summary": "The last screen bind error timestamp on the STB",
                        "type": "integer",
                        "example": 1589356931000
                    },
                    "stbNumOtherBindFailures":{
                        "summary": "The number of other bind failures on the STB",
                        "type": "integer",
                        "example": 3
                    },
                    "stbLastOtherBindErrorCode":{
                        "summary": "The last other bind error code on the STB",
                        "type": "integer",
                        "example": 1
                    },
                    "stbLastOtherBindErrorRemoteType":{
                        "summary": "The remote type for the last other bind error on the STB",
                        "type": "string",
                        "example": ""
                    },
                    "stbLastOtherBindErrorBindType":{
                        "summary": "The last other bind error bind type on the STB",
                        "type": "integer",
                        "example": 2
                    },
                    "stbLastOtherBindErrorTimestamp":{
                        "summary": "The last other bind error timestamp",
                        "type": "integer",
                        "example": "1589359161000"
                    },
                    "bHasIrRemotePreviousDay":{
                        "summary": "`true` or `false`",
                        "type": "boolean",
                        "example": false
                    },
                    "bHasIrRemoteCurrentDay":{
                        "summary": "`true` or `false`",
                        "type": "boolean",
                        "example": false
                    },
                    "status_code": {
                        "$ref": "#/definitions/status_code"
                    },
                    "success":{
                        "$ref": "#/definitions/success"
                    }
                },
                "required":[
                    "stbRf4ceMACAddress",
                    "stbRf4ceSocMfr",
                    "stbHALVersion",
                    "stbRf4ceShortAddress",
                    "stbPanId",
                    "stbActiveChannel",
                    "stbNumPairedRemotes",
                    "stbNumScreenBindFailures",
                    "stbLastScreenBindErrorCode",
                    "stbLastScreenBindErrorRemoteType",
                    "stbLastScreenBindErrorTimestamp",
                    "stbNumOtherBindFailures",
                    "stbLastOtherBindErrorCode",
                    "stbLastOtherBindErrorRemoteType",
                    "stbLastOtherBindErrorBindType",
                    "stbLastOtherBindErrorTimestamp",
                    "bHasIrRemotePreviousDay",
                    "bHasIrRemoteCurrentDay",
                    "status_code",
                    "success"
                ]
            }
        },
        "getLastKeypressSource":{
            "summary": "Returns last key press source data. The data, if any, is returned as part of the `result` object.",
            "params": {
                "$ref": "#/definitions/params"
            },
            "result": {
                "type": "object",
                "properties": {
                    "status_code": {
                        "$ref": "#/definitions/status_code"
                    },
                    "success":{
                        "$ref": "#/definitions/success"
                    }
                },
                "required":[
                    "status_code",
                    "success"
                ]
            }
        },
        "getLastPairedRemoteData":{
            "summary": "Returns all remote data for the last paired remote. The data, if any, is returned as part of the `result` object.",
            "params": {
                "$ref": "#/definitions/params"
            },
            "result": {
                "type": "object",
                "properties": {
                    "status_code": {
                        "$ref": "#/definitions/status_code"
                    },
                    "success":{
                        "$ref": "#/definitions/success"
                    }
                },
                "required":[
                    "status_code",
                    "success"
                ]
            }
        },
        "getSingleRemoteData":{
            "summary": "Returns all remote data for the specified remote. The data, if any, is returned as part of the `result` object.",
            "params": {
                "type":"object",
                "properties": {
                    "remoteId": {
                        "$ref": "#/definitions/remoteId"
                    }
                },
                "required": [
                    "remoteId"
                ]
            },
            "result": {
                "type": "object",
                "properties": {
                    "status_code": {
                        "$ref": "#/definitions/status_code"
                    },
                    "success":{
                        "$ref": "#/definitions/success"
                    }
                },
                "required":[
                    "status_code",
                    "success"
                ]
            }
        },
        "getValues":{
            "summary": "Returns remote setting values",
            "params": {
                "$ref": "#/definitions/params"
            },
            "result": {
                "type":"object",
                "properties": {
                    "supportsASB":{
                        "$ref": "#/definitions/supportsASB"
                    },
                    "enableASB":{
                        "$ref": "#/definitions/enableASB"
                    },
                    "enableOpenChime":{
                        "$ref": "#/definitions/enableOpenChime"
                    },
                    "enableCloseChime":{
                        "$ref": "#/definitions/enableCloseChime"
                    },
                    "enablePrivacyChime":{
                        "$ref": "#/definitions/enablePrivacyChime"
                    },
                    "conversationalMode":{
                        "$ref": "#/definitions/conversationalMode"
                    },
                    "chimeVolume":{
                        "$ref": "#/definitions/chimeVolume"
                    },
                    "irCommandRepeats":{
                        "$ref": "#/definitions/irCommandRepeats"
                    },
                    "status_code": {
                        "$ref": "#/definitions/status_code"
                    },
                    "success":{
                        "$ref": "#/definitions/success"
                    }
                },
                "required":[
                    "supportsASB",
                    "enableASB",
                    "enableOpenChime",
                    "enableCloseChime",
                    "enablePrivacyChime",
                    "conversationalMode",
                    "chimeVolume",
                    "irCommandRepeats",
                    "status_code",
                    "success"
                ]
            }
        },
        "setValues":{
            "summary": "Sets remote setting values",
            "params": {
                "type":"object",
                "properties": {
                    "supportsASB":{
                        "$ref": "#/definitions/supportsASB"
                    },
                    "enableASB":{
                        "$ref": "#/definitions/enableASB"
                    },
                    "enableOpenChime":{
                        "$ref": "#/definitions/enableOpenChime"
                    },
                    "enableCloseChime":{
                        "$ref": "#/definitions/enableCloseChime"
                    },
                    "enablePrivacyChime":{
                        "$ref": "#/definitions/enablePrivacyChime"
                    },
                    "conversationalMode":{
                        "$ref": "#/definitions/conversationalMode"
                    },
                    "chimeVolume":{
                        "$ref": "#/definitions/chimeVolume"
                    },
                    "irCommandRepeats":{
                        "$ref": "#/definitions/irCommandRepeats"
                    }
                },
                "required":[
                    "supportsASB",
                    "enableASB",
                    "enableOpenChime",
                    "enableCloseChime",
                    "enablePrivacyChime",
                    "conversationalMode",
                    "chimeVolume",
                    "irCommandRepeats"
                ]
            },
            "result": {
                "type":"object",
                "properties": {
                    "status_code": {
                        "$ref": "#/definitions/status_code"
                    },
                    "success":{
                        "$ref": "#/definitions/success"
                    }
                },
                "required":[
                    "status_code",
                    "success"
                ]
            }
        },
        "startPairingMode":{
            "summary": "Enters pairing mode",
            "params": {
                "type":"object",
                "properties": {
                    "pairingMode": {
                        "summary": "The pairing mode",
                        "type": "integer",
                        "example": 0
                    },
                    "restrictPairing": {
                        "summary": "The pairing restrictions",
                        "type": "integer",
                        "example": 0
                    }
                },
                "required": [
                    "pairingMode",
                    "restrictPairing"
                ]
            },
            "result": {
                "type":"object",
                "properties": {
                    "status_code": {
                        "$ref": "#/definitions/status_code"
                    },
                    "success":{
                        "$ref": "#/definitions/success"
                    }
                },
                "required":[
                    "status_code",
                    "success"
                ]
            }
        }
    },
    "events":{
        "onControl":{
            "summary": "Triggered on control manager events",
            "params": {
                "type":"object",
                "properties": {
                    "remoteId": {
                        "$ref": "#/definitions/remoteId"
                    },
                    "eventValue": {
                        "summary": "The event value",
                        "type": "integer",
                        "example": ""
                    },
                    "eventSource": {
                        "summary": "The event source",
                        "type": "string",
                        "example": ""
                    },
                    "eventType": {
                        "summary": "The event type",
                        "type": "string",
                        "example": ""
                    },
                    "eventData": {
                        "summary": "The event Data",
                        "type": "string",
                        "example": ""
                    }
                },
                "required": [
                    "remoteId",
                    "eventValue",
                    "eventSource",
                    "eventType",
                    "eventData"
                ]
            }
        },
        "onXRConfigurationComplete":{
            "summary": "Triggered on control manager configuration complete event",
            "params": {
                "type":"object",
                "properties": {
                    "remoteId": {
                        "$ref": "#/definitions/remoteId"
                    },
                    "remoteType": {
                        "$ref": "#/definitions/remoteType"
                    },
                    "bindingType": {
                        "$ref": "#/definitions/bindingType"
                    },
                    "configurationStatus": {
                        "$ref": "#/definitions/configurationStatus"
                    }
                },
                "required": [
                    "remoteId",
                    "remoteType",
                    "bindingType",
                    "configurationStatus"
                ]
            }           
        },
        "onXRPairingStart":{
            "summary": "Triggered on control manager validation/pairing key press event",
            "params": {
                "type":"object",
                "properties": {
                    "remoteId": {
                        "$ref": "#/definitions/remoteId"
                    },
                    "remoteType": {
                        "$ref": "#/definitions/remoteType"
                    },
                    "bindingType": {
                        "$ref": "#/definitions/bindingType"
                    },
                    "validationDigit1": {
                        "$ref": "#/definitions/validationDigit1"
                    },
                    "validationDigit2": {
                        "$ref": "#/definitions/validationDigit2"
                    },
                    "validationDigit3": {
                        "$ref": "#/definitions/validationDigit3"
                    }
                },
                "required": [
                    "remoteId",
                    "remoteType",
                    "bindingType",
                    "validationDigit1",
                    "validationDigit2",
                    "validationDigit3"
                ]
            }            
        },
        "onXRValidationComplete":{
            "summary": "Triggered on control manager validation/pairing end event.  \nValidation status codes:  \n* `0` - VALIDATION_SUCCESS   \n* `1` - VALIDATION_TIMEOUT  \n* `2` - VALIDATION_FAILURE  \n* `3` - VALIDATION_ABORT  \n* `4` - VALIDATION_WRONG_CODE",
            "params": {
                "type":"object",
                "properties": {
                    "remoteId": {
                        "$ref": "#/definitions/remoteId"
                    },
                    "remoteType": {
                        "$ref": "#/definitions/remoteType"
                    },
                    "bindingType": {
                        "$ref": "#/definitions/bindingType"
                    },
                    "validationStatus": {
                        "summary": "The validation status code",
                        "type": "integer",
                        "example": 0
                    }
                },
                "required": [
                    "remoteId",
                    "remoteType",
                    "bindingType",
                    "validationStatus"
                ]
            }
        },
        "onXRValidationUpdate":{
            "summary": "Triggered on control manager events",
            "params": {
                "type":"object",
                "properties": {
                    "remoteId": {
                        "$ref": "#/definitions/remoteId"
                    },
                    "remoteType": {
                        "$ref": "#/definitions/remoteType"
                    },
                    "bindingType": {
                        "$ref": "#/definitions/bindingType"
                    },
                    "validationDigit1": {
                        "$ref": "#/definitions/validationDigit1"
                    },
                    "validationDigit2": {
                        "$ref": "#/definitions/validationDigit2"
                    },
                    "validationDigit3": {
                        "$ref": "#/definitions/validationDigit3"
                    }
                },
                "required": [
                    "remoteId",
                    "remoteType",
                    "bindingType",
                    "validationDigit1",
                    "validationDigit2",
                    "validationDigit3"
                ]
            }
        }
    }
}
